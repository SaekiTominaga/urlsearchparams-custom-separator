{
	"compilerOptions": {
		/* Project Options */
		"declaration": true,
		"declarationMap": true,
		"incremental": true,
		"module": "ES2020",
		"outDir": "dist/",
		"sourceMap": true,
		"target": "ES2020",

		/* Strict Checks */
		"strict": true,
		"alwaysStrict": false,

		/* Module Resolution */
		"moduleResolution": "node",

		/* Linter Checks */
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		/* Advanced */
		"allowUnreachableCode": false,
		"forceConsistentCasingInFileNames": true,
		"newLine": "LF"
	},
	"include": ["src/**/*.ts"]
}
